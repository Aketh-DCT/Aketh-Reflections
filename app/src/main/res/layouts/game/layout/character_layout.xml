<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_character"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/character_iv_ch1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_bias="0.978"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/tsi"/>

    <Space
        android:id="@+id/space"
        android:layout_width="8dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/character_iv_ch1"
        app:layout_constraintEnd_toStartOf="@id/character_iv_ch2"
        app:layout_constraintStart_toEndOf="@id/character_iv_ch1"
        app:layout_constraintTop_toTopOf="@id/character_iv_ch1" />

    <ImageView
        android:id="@+id/character_iv_ch2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/space"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.978"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/kara"
        android:scaleX="-1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
