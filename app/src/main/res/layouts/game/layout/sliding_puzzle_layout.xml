<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:id="@+id/layout_slidingPuzzle">

    <GridLayout

        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="#FFFFFF"
        android:columnCount="3"
        android:rowCount="3">

        <gr.aketh.echoes.classes.CustomButton android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:src="@drawable/row_2_column_1"
            android:id="@+id/slidingPuzzle_bt_4"
            android:scaleType="fitXY"
            android:text="I'm a button"/>

        <gr.aketh.echoes.classes.CustomButton android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:src="@drawable/row_3_column_1"
            android:id="@+id/slidingPuzzle_bt_7"
            android:scaleType="fitXY"
            android:text="I'm a button"/>

        <gr.aketh.echoes.classes.CustomButton android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:src="@drawable/row_1_column_3"
            android:id="@+id/slidingPuzzle_bt_3"
            android:scaleType="fitXY"
            android:text="I'm a button"/>

        <!-- 4 7 3. -->

        <gr.aketh.echoes.classes.CustomButton android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:src="@drawable/row_1_column_2"
            android:id="@+id/slidingPuzzle_bt_2"
            android:scaleType="fitXY"
            android:text="I'm a button"/>


        <gr.aketh.echoes.classes.CustomButton android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:src="@drawable/row_2_column_3"
            android:id="@+id/slidingPuzzle_bt_6"
            android:scaleType="fitXY"
            android:text="I'm a button"/>




        <gr.aketh.echoes.classes.CustomButton android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="I'm a button"
            android:clickable="true"
            android:id="@+id/slidingPuzzle_bt_8"
            android:src="@drawable/row_3_column_2"
            android:scaleType="fitXY"/>

        <!-- 2 6 8. -->

        <gr.aketh.echoes.classes.CustomButton android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:src="@drawable/row_2_column_2"
            android:id="@+id/slidingPuzzle_bt_5"
            android:scaleType="fitXY"
            android:text="I'm a button"/>


        <gr.aketh.echoes.classes.CustomButton android:layout_width="100dp"

            android:layout_height="100dp"
            android:clickable="true"
            android:src="@drawable/row_1_column_1"
            android:id="@+id/slidingPuzzle_bt_1"
            android:scaleType="fitXY"
            android:text="I'm a button"


            android:layout_margin="0dp" />

        <!-- 5 1. -->














        <gr.aketh.echoes.classes.CustomButton android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="I' the button"
            android:clickable="true"
            android:id="@+id/slidingPuzzle_bt_empty"
            android:visibility="invisible"
            />






    </GridLayout>

</LinearLayout>